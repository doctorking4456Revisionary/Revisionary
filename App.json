{
  "expo": {
    "name": "AI Quiz Master",
    "slug": "ai-quiz-master",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",  <-- CHANGED THIS (Must be a local path)
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/icon.png", <-- CHANGED THIS (Use local icon for splash too)
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png", <-- CHANGED THIS
        "backgroundColor": "#ffffff"
      },
      "package": "com.quizmaster.app",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET"
      ]
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.quizmaster.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you upload study material."
        }
      ],
      [
        "expo-document-picker"
      ]
    ]
  }
    }
